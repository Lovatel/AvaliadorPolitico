<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activities.MainActivity">

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/activity_main_brasilia_image_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:adjustViewBounds="true"
        android:maxHeight="500dp"
        android:scaleType="fitCenter"
        android:src="@drawable/senado"
        app:layout_constraintBottom_toTopOf="@id/activity_main_app_name_text_view"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginBottom="40dp"/>

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/activity_main_app_name_text_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        android:fontFamily="sans-serif"
        android:text="@string/app_name2"
        android:textAlignment="center"
        android:textAllCaps="false"
        android:textColor="@color/colorGreenText"
        android:textSize="40sp"
        android:textStyle="bold|italic"
        app:layout_constraintBottom_toTopOf="@id/activity_main_access_button"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/activity_main_brasilia_image_view" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/activity_main_access_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAlignment="center"
        android:textAllCaps="false"
        android:textColor="@color/colorGreenText"
        android:text="@string/access"
        android:background="@drawable/button_rounded"
        android:textSize="20sp"
        android:textStyle="bold|italic"
        android:fontFamily="sans-serif"
        app:layout_constraintBottom_toTopOf="@id/activity_main_brasil_image_view"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/activity_main_app_name_text_view"
        android:layout_margin="4dp"/>

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/activity_main_brasil_image_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/activity_main_access_button"
        android:src="@drawable/governo_federal"
        android:adjustViewBounds="true"
        android:maxHeight="400dp"
        android:scaleType="fitCenter"
        android:layout_marginTop="50dp"
        />

</androidx.constraintlayout.widget.ConstraintLayout>